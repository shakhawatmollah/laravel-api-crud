<?php

use Illuminate\Http\Request;
use Illuminate\Support\Facades\Route;
use App\Http\Controllers\ArticleController;

Route::get('/user', function (Request $request) {
    return $request->user();
})->middleware('auth:sanctum');

Route::get('/v1/articles', [ArticleController::class, 'index']);
Route::post('/v1/articles', [ArticleController::class, 'store']);
Route::get('/v1/articles/{article}', [ArticleController::class, 'show']);
Route::put('/v1/articles/{article}', [ArticleController::class, 'update']);
Route::delete('/v1/articles/{article}', [ArticleController::class, 'destroy']);
